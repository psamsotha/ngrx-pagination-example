{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for NgRx pagination blog article",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "tsc": "tsc",
    "tsc:watch": "tsc --w",
    "server:test": "tsc && concurrently \"tsc -w\" \"jasmine-node dist/backend/test/ --autotest --color\"",
    "server:test:once": "npm run tsc && jasmine-node test/",
    "serve": "tsc && concurrently \"tsc -w\" \"supervisor ./dist/server.js\""
  },
  "author": "Paul Samsotha <paulsamsotha@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "lokijs": "^1.4.3",
    "morgan": "^1.8.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.0",
    "@types/express": "^4.0.35",
    "@types/jasmine": "^1.3.2",
    "@types/lokijs": "^1.2.30",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.8",
    "concurrently": "^3.4.0",
    "errorhandler": "^1.5.0",
    "jasmine-node": "^1.14.5",
    "typescript": "^2.2.1"
  }
}
